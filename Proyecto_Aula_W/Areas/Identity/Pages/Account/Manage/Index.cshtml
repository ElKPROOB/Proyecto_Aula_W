@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<body style="background-image:url(https://i.ibb.co/B3bBrY7/General.png); background-repeat:no-repeat; background-size:cover;">
    <div class="row">
        <div class="col-md-6">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username">Nombre de Usuario</label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber">Número de Teléfono</label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-danger">Regresar</a> <button id="update-profile-button" type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</body>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
